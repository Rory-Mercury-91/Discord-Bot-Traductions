{
  "name": "publication-generator-electron",
  "version": "1.0.0",
  "description": "Application Electron pour générer et publier des traductions sur Discord",
  "author": "Rory Mercury 91",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently \"npm --prefix frontend run dev\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:frontend": "npm --prefix frontend run build",
    "build:win": "powershell -ExecutionPolicy Bypass -File ./build-windows.ps1",
    "test": "npm --prefix frontend run type-check && npm --prefix frontend run build",
    "pack": "npm run build:frontend && electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.example.publicationgenerator",
    "productName": "PublicationGenerator",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "files": [
      "dist/frontend/**",
      "main.js",
      "preload.js",
      "package.json"
    ]
  }
}